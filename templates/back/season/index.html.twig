{% extends 'back/base.html.twig' %}

{% block title %}Hello SeasonController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Hello ! ✅</h1>
     <table class="table">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">série number</th>
            <th scope="col">épisodes numbers</th>
  
        </tr>
    </thead>
    <tbody>
        {% for season in seasons %}
            <tr>
                <th scope="row">{{ season.id }}</th>
                <td>{{ season.number }}</td>
                <td>{{ season.episodesnumber}}</td>
                <td class="d-flex"><a class="btn btn-primary" href="{{ path('app_back_season_edit', {'id': season.id}) }}"><i class="fas fa-eye"></i></a>
                <a class="btn btn-danger" href="{{ path('app_back_season_delete', {'id': season.id}) }}"><i class="fas fa-trash"></i></a></td>
            </tr>
        {% endfor %}
    </tbody>
</table>

</div>
{% endblock %}
